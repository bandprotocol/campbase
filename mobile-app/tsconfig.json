{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "jsx": "react-native",
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "src",
    "traceResolution": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["../"],
      "test/*": ["../test/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["./src/**/*", "./node_modules/spec/**/*"]
}
