{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react-native",
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "src",
    "traceResolution": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["../"],
      "test/*": ["../test/*"],
      "spec/*": ["../../spec/*"]
    }
  },
  "include": ["./src/**/*", "../spec/**/*"],
  "exclude": ["node_modules"]
}
