{
  "name": "campbase-server",
  "version": "1.0.0",
  "description": "Server for CAMPBASE - powered by Band Protocol",
  "main": "index.js",
  "author": "Band Protocol Developers <dev@bandprotocol.com>",
  "license": "PRIVATE",
  "scripts": {
    "start": "nodemon --watch src --exec ts-node -r tsconfig-paths/register ./src/index.ts",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "test-coverage": "istanbul test",
    "migrate-dev": "knex migrate:latest --env dev",
    "seed-dev": "knex seed:run --env dev"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt": "^2.0.1",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.14.6",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-jwt": "^3.3.2",
    "koa-passport": "^4.1.0",
    "koa-router": "^7.4.0",
    "mysql": "^2.15.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/chai": "^4.1.4",
    "@types/chai-http": "^3.0.4",
    "@types/expect": "^1.20.3",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/knex": "^0.14.14",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.28",
    "@types/mocha": "^5.2.2",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "cross-env": "^5.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.5",
    "nyc": "^12.0.2",
    "sinon": "^6.0.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.1.1",
    "tsconfig-paths": "^3.3.2",
    "typescript": "^2.9.1"
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  }
}
