{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["../"],
      "test/*": ["../test/*"]
    }
  },
  "include": ["./src/**/*", "./test/**/*"]
}
